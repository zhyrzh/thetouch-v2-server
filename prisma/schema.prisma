generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Journalist {
  id               Int       @id @default(autoincrement())
  first_name       String
  last_name        String
  course           String
  position         String
  photo            String
  authoredArticles Article[] @relation(name: "authored_articles")
  graphicsArticles Article[] @relation(name: "graphics_articles")

  @@map("journalists")
}

model Article {
  id Int @id @default(autoincrement())

  category String
  headline String
  body     String

  authord_by  String
  graphics_by String

  author             Journalist @relation(name: "authored_articles", fields: [author_id], references: [id], onDelete: Cascade)
  author_id          Int
  graphics_artist    Journalist @relation(name: "graphics_articles", fields: [graphics_artist_id], references: [id], onDelete: Cascade)
  graphics_artist_id Int

  photos ArticlePhotos[]

  @@map("articles")
}

model ArticlePhotos {
  id Int @id @default(autoincrement())

  url        String
  article_id Int?
  article    Article? @relation(fields: [article_id], references: [id], onDelete: Cascade)

  @@map("article_photos")
}
