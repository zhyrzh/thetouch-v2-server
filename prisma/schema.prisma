// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Journalist {
  id            Int      @id @default(autoincrement())
  createdAt     DateTime @default(now())

  first_name    String
  last_name     String
  course        String
  position      String
  authors       Article[] @relation("authors")
  graphicArtist Article[] @relation("graphic_artist")
  @@map("journalists")
}

model Article {
  id                  Int      @id @default(autoincrement())
  createdAt           DateTime @default(now())

  headline            String
  body                String
  author_id           Int
  graphics_artist_id  Int
  graphics_artist     Journalist @relation(name: "graphic_artist", fields: [graphics_artist_id], references: [id], onDelete: Cascade)
  authors             Journalist @relation(name: "authors", fields: [author_id], references: [id], onDelete: Cascade)
  photos              Photo[]
  @@map("articles")
}

model Photo{
  id Int @id @default(autoincrement())
  url String
  article_id Int
  article Article @relation(fields: [article_id], references: [id], onDelete: Cascade)
  @@map("photos")
}
